<!DOCTYPE html>
<html lang="en">
{{>partials/head }}

<body>

    <div class="container mx-auto">
        <header class="container mx-auto">
            {{> partials/navbar }}
        </header>

        <!-- Container -->
        <div class="flex justify-center px-6 mt-36">
            <!-- Row -->
            <div class="w-full xl:w-3/4 lg:w-11/12 flex">
                <!-- Col -->
                <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
                    style="background-image: url('https://img.freepik.com/free-vector/restaurant-mural-wallpaper_23-2148692632.jpg'); background-position: center;">
                </div>

                <!-- Col -->
                <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none  border border-yellow-700">
                    <h3 class="pt-4 text-2xl text-center text-yellow-900 font-semibold" method="POST">Welcome Back!</h3>
                    <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-yellow-700" for="username">
                                Email
                            </label>
                            <input
                                class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                name="email" id="email" type="email" placeholder="email" required />
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-yellow-700" for="password">
                                Password
                            </label>
                            <input
                                class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                name="password" id="password" type="password" placeholder="******************" required />
                            <!-- <p class="text-xs italic text-red-500">Please choose a password.</p> -->
                        </div>
                        <div class="mb-4">
                            <input class="mr-2 leading-tight" type="checkbox" id="checkbox_id" />
                            <label class="text-sm" for="checkbox_id">
                                Remember Me
                            </label>
                        </div>
                        <div class="mb-6 text-center">
                            <button
                                class="w-full px-4 py-2 font-bold text-yellow-700 bg-yellow-300 rounded-full hover:bg-yellow-100 focus:outline-none focus:shadow-outline"
                                type="submit">
                                Login
                            </button>
                        </div>
                        <hr class="mb-6 border-t" />
                        <div class="flex flex-row justify-between">
                            <div class="">
                                <a class="inline-block font-semibold text-sm text-yellow-700 align-baseline hover:text-yellow-900"
                                    href="/signup">
                                    Create an Account!
                                </a>
                            </div>
                            <div class="">
                                <a class="inline-block font-semibold text-sm text-yellow-700 align-baseline hover:text-yellow-900"
                                    href="#">
                                    Forgot Password?
                                </a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    {{> partials/footer }}

    <script src="/js/login.js"></script>

</body>

</html>